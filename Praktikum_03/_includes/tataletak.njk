<html lang="en">
<head>
	<link rel="stylesheet" href="/assets/css/sugar.css">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	{%include "navigasi.njk" %}
	<section>
		{{content | safe }}
	</section>

	<script>
		window.onload = autoJalan();
		function autoJalan() {
			var date = new Date();
			var jam = parseInt(date.getHours());

			if (jam > 18) {
				var element = document.body;
				element.classList.toggle("modemalam");
			}
		}
		</script>
</body>
</html>